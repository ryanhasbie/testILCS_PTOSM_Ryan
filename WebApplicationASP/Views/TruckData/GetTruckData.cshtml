@model System.Collections.Generic.List<WebApplicationASP.Models.TruckData>?

<!DOCTYPE html>
<html>
<head>
    <title>Truck Data</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Truck Data</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>KODE TRUK</th>
                    <th>NOPOL</th>
                    <th>NO SPMK</th>
                    <th>TGL GET IN</th>
                    <th>TGL GET OUT</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var truck in Model)
                {
                    <tr>
                        <td>@truck.NO_JOB</td>
                        <td>@truck.PLAT_NO</td>
                        <td>@truck.NO_SPMK</td>
                        <td>@truck.GET_IN_DATE</td>
                        <td>@truck.GET_OUT_DATE</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

